<!DOCTYPE html>
<html>
<head>
  <title>BydV3</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%#
  <p class="notice">
    <%= notice %>
  <%#</p>
  <p class="alert">
    <%= alert %>
  <%#</p>
   %>


  <div class= "top_header">
    <% if user_signed_in? %>
      
      <%= link_to image_tag(current_user.image), destroy_user_session_path, :method => :delete, :class => 'ppic' %>
      
    <% else %>
      <%= link_to 'Login', '/users/auth/facebook' %>
    <% end %>
  </div>  
  <%= yield %>
</body>
</html>
